<div class="mt-3">
<div class="ml-3">
<div class="text-left" style="width: 600px;">
<h1>Log In</h1>
<p><a href="/users/new" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Sign Up</a></p>
<%= form_tag sessions_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control', required: true %>
  </div>

  <%= submit_tag 'Log In', class: 'btn btn-info btn-lg' %>
<% end %>

</div>
</div>
</div>